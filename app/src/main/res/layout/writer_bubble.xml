        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/bg_writer"
        android:maxWidth="330dp"
        android:maxHeight="600dp"
        android:minHeight="30dp">

